// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     String  @id @default(cuid())
  email  String  @unique
  isPro  Boolean @default(false)
  models Model[]

  // First parameters of the account has been done ? 
  fpDone   Boolean    @default(false)
  // Tweets for take as an example
  fpTweets fpTweets[]
}

model Model {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  name        String
  description String   @default("")
  shareLink   String   @unique @default("")
  sentiment   String
  style       String
  tone        String
  context     String
  length      Int
}

model fpTweets {
  id      String  @id @default(cuid())
  content String
  user    User?   @relation(fields: [userId], references: [id])
  userId  String?
}
