generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  isPro        Boolean       @default(false)
  fpDone       Boolean       @default(true)
  priority     Boolean       @default(false)
  usage        Int           @default(0)
  Model        Model[]
  Subscription Subscription?
  Tweet        Tweet[]
  fpTweets     fpTweets[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Model {
  id              String   @id
  createdAt       String
  userId          String
  name            String
  description     String   @default("")
  shareLink       String?  @unique @default("")
  sentiment       String
  style           String
  tone            String
  context         String
  gpt4            Boolean  @default(false)
  hashtags        String[]
  includeHashtags Boolean  @default(false)
  target          String
  lang            String   @default("en")
  User            User     @relation(fields: [userId], references: [id])
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Subscription {
  id        String   @id
  createdAt String
  userId    String   @unique
  plan      Plan
  startAt   DateTime
  endAt     DateTime
  cusId     String   @unique
  subId     String   @unique
  User      User     @relation(fields: [userId], references: [id])
}

model Tweet {
  id              String   @id
  createdAt       String
  userId          String
  sentiment       String
  style           String
  tone            String
  context         String
  gpt4            Boolean  @default(false)
  hashtags        String[]
  includeHashtags Boolean  @default(false)
  target          String
  lang            String   @default("en")
  result          String
  User            User     @relation(fields: [userId], references: [id])
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model fpTweets {
  id      String  @id
  content String
  userId  String?
  User    User?   @relation(fields: [userId], references: [id])
}

enum Plan {
  MONTHLY
  YEARLY
}
